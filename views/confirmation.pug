doctype html
html
  head
    title Delete Contact Confirmation
    style.
      header {
        background-color: #7BAFD4; 
        color: white;
        padding: 20px;
        text-align: center;
      }

      main {
        padding: 20px;
        display: flex;
        flex-direction: column;
        align-items: center;
      }
      p {
        text-align: center;
        margin-bottom: 20px;
      }

      form {
        text-align: center;
        margin-top: 20px;
      }

      button[type='submit'],
      a.button {
        background-color: #7BAFD4;
        color: white;
        padding: 10px 15px;
        border-radius: 5px;
        margin: 5px;
        cursor: pointer;
      }

      button[type='submit']:hover {
        background-color: #5692C6; 
      }

      a.button:hover {
        background-color: #5692C6;
      }
  body
    header
    main
      h1 Delete Contact
      h2 #{contact.FirstName} #{contact.LastName}
      p Are you sure you want to delete this contact?
      form(action=`/${contact.ID}/delete` method="POST")
        button(type="submit") Yes!
        a(href="/" class="button") Nevermind
